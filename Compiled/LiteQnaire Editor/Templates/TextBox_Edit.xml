  <TextBox Text="" FontStyle="regular" FontSize="12" ForeColor="black" Position="middle" Long="True" Locked="False"/>
 </Block>

 <Block BackgroundColor="aliceblue" SplitColor="aliceblue">
   <LabelText Text="Font Size:" FontStyle="regular" FontSize="16" ForeColor="gray" Position="left"/>
 </Block> 

