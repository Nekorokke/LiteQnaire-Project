 </Block>

 <Block BackgroundColor="aliceblue" SplitColor="aliceblue">
   <LabelText Text="Font Style:" FontStyle="regular" FontSize="16" ForeColor="gray" Position="left"/>
 </Block> 

 <Block BackgroundColor="white" SplitColor="gray">
  <RadioButton Text="Regular" FontStyle="regular" FontSize="12" ForeColor="black" Position="middle" Selected="False"/>
